<%= link_to "Welcome Page", "/" %>
<%= link_to "Pets Index", "/pets" %>
<%= link_to "Shelters Index", "/shelters" %>

<h1> All Pets </h1>

<% @pets.each do |pet| %>
  <section id="pets-<%=pet.id%>">
    <%= image_tag pet.image %>
    <br/>
    <%= link_to pet.name, "/pets/#{pet.id}" %>
    <h5><%= pet.city %></h5>
    <h5><%= pet.approx_age %></h5>
    <h5><%= pet.description %></h5>
    <h5><%= pet.sex %></h5>
  <%= link_to "#{pet.shelter.name}", "/shelters/#{pet.shelter.id}" %>
  <br/>
  <br/>
  <%= link_to "Edit Pet", "/pets/#{pet.id}/edit" %>
  <%= link_to "Delete Pet", "/pets/#{pet.id}", method: :delete %>
  <br/>
  <br/>
  <section>
<% end %>
