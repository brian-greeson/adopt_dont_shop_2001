<%= form_tag "/pets/#{@pet_to_edit.id}", method: :patch do %>
  <%= label_tag :image %>
  <%= text_field_tag :image %>
  <br/>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <br/>
  <%= label_tag :approx_age %>
  <%= text_field_tag :approx_age %>
  <br/>
  <%= label_tag :sex %>
  <%= text_field_tag :sex %>
  <br/>
  <%= label_tag :description %>
  <%= text_field_tag :description %>
  <br/>
  <%= submit_tag 'Update Pet' %>
<% end %>
